@model onlineclothing2.Models.Add			
<div class="sub-banner my-banner2">

</div>

<div class="content">
	<div class="container">
		<div class="col-md-4 w3ls_dresses_grid_left">
			<div class="w3ls_dresses_grid_left_grid">
				<h3>Categories</h3>
					<div class="w3ls_dresses_grid_left_grid_sub">
						<div class="ecommerce_dres-type">
							<ul>
								<li><a href="women.html">Onepiece</a></li>
								<li><a href="women.html">Tshirts</a></li>
								<li><a href="women.html">Skirts</a></li>
								<li><a href="women.html">Kurtha&Kurthis</a></li>
					
							</ul>
						</div>
					</div>
			</div>
			
			<div class="w3ls_dresses_grid_left_grid">
				<h3>Size</h3>
				<div class="w3ls_dresses_grid_left_grid_sub">
					<div class="ecommerce_color ecommerce_size">
						<ul>
							<li><a href="#">Medium</a></li>
							<li><a href="#">Large</a></li>
							<li><a href="#">Extra Large</a></li>
							<li><a href="#">Small</a></li>
						</ul>
					</div>
				</div>
			</div>
			<div class="w3ls_dresses_grid_left_grid">
				<div class="dresses_img_hover">
					<img src="~/style/images/offer.jpg" alt=" " class="img-responsive" />
					<div class="dresses_img_hover_pos">
						<h4>Upto<span>40%</span><i>Off</i></h4>
					</div>
				</div>
			</div>
		</div>
		
		<div class="col-md-8 col-sm-8 women-dresses">
			<div class="women-set1">
				@foreach(var p in ViewBag.data)
				{

				<div class="col-md-4 women-grids wp1 animated wow slideInUp" data-wow-delay=".5s">
					<div class="product-img">
						<img src="@p.imgpath" asp-append-version="true"/> 
						
						<div class="p-mask">
							<form action="#" method="post">
								<input type="hidden" name="cmd" value="_cart" />
								<input type="hidden" name="add" value="1" /> 
								<input type="hidden" name="w3ls1_item" value="" /> 
								<input type="hidden" name="amount" value="50.00" /> 
								<button type="submit" class="w3ls-cart pw3ls-cart"  asp-controller="Single" asp-action="Singlepics" asp-route-id="@p.id">Details</button>
							</form>
						</div>

					</div>
					<i class="fa fa-star yellow-star" aria-hidden="true"></i>
					<i class="fa fa-star yellow-star" aria-hidden="true"></i>
					<i class="fa fa-star yellow-star" aria-hidden="true"></i>
					<i class="fa fa-star yellow-star" aria-hidden="true"></i>
					<i class="fa fa-star gray-star" aria-hidden="true"></i>
					<h4>@p.name</h4>
					<h5>RS @p.price</h5>
				</div>
				}
				

				<div class="col-md-4 women-grids wp1 animated wow slideInUp" data-wow-delay=".5s">
					<a href="single.html"><div class="product-img">
						<img src="images/wp1.jpg" alt="" />
						<div class="p-mask">
							<form action="#" method="post">
								<input type="hidden" name="cmd" value="_cart" />
								<input type="hidden" name="add" value="1" /> 
								<input type="hidden" name="w3ls1_item" value="Pencil dress" /> 
								<input type="hidden" name="amount" value="50.00" /> 
								<button type="submit" class="w3ls-cart pw3ls-cart"><i class="fa fa-cart-plus" aria-hidden="true"></i> Add to cart</button>
							</form>
						</div>
					</div></a>
					
				</div>
			

				
				<div class="clearfix"></div>
			</div>
			</div>
			
				
				<div class="clearfix"></div>
			
	
		
				
		
				<div class="clearfix"></div>
</div>	
</div>