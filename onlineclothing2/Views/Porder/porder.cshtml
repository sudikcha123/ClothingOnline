@page

@model onlineclothing2.Models.Checkout

@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    List<Add> products = HttpContextAccessor.HttpContext.Session.Get<List<Add>>("products");
    if (products == null)
    {
        products = new List<Add>();
    }
}

 <div class="content-body">

                   <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-lg-12">
                        <div class="card" style="margin-top:150px;">
                            <div class="card-body">
                                <div class="card-title">
                                    
                                </div>
                                <div class="form-validation">
                                    <form class="form-valide" method="post" asp-controller="Porder" asp-action="order" enctype="multipart/form-data" style="width:50%; margin-left:450px">
                                    <div class="form-group row">
                                            <label class="col-lg-4 col-form-label" for="val-username">Full name:
                                            </label>
                                            <div class="col-lg-6">
                                                <input type="hidden" class="from-control" asp-for="id"/>
                                                <input type="text" class="form-control" id="val-username" asp-for="Fullname">
                                            </div>
                                        </div>
                                       
                                         <div class="form-group row">
                                            <label class="col-lg-4 col-form-label" for="val-suggestions">Phone:
                                            </label>
                                            <div class="col-lg-6">
                                                 <input type="text" class="form-control" id="val-username" asp-for="phone">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label" for="val-email">Delivery Address:
                                            </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" id="val-email" asp-for="Delivery">
                                            </div>
                                        </div>
                                         <div class="form-group row">
                                            <label class="col-lg-4 col-form-label" for="val-password">Total:@products.Sum(c=>c.price)</label>
                                            
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label" for="val-password">Payment Method:</label>
                                            <div class="col-lg-6">
                                                @*<input type="checkbox" id="myCheckbox2" name="payment" />
                                                 <label for="myCheckbox2"><img style="height:40px; width:50px;" src="/style/images/esewa.png" /></label>
                                                  <input type="checkbox" id="myCheckbox3" />*@
                                                 <label for="myCheckbox3"><img src="" />Only Cash on delivery is accepted</label>
                                               
                                               </div>
                                        </div>
                                         
                                        <div class="form-group row">
                                            <div class="col-lg-8 ml-auto">
                                                <button type="submit" class="btn btn-primary" style="background-color:#32CD32;" value="Order"> Place order</button>
                                                <button type="submit" class="btn btn-primary" style="background-color:#32CD32;" value="" asp-controller="Home" asp-action="Index"> Go back</button>
                                            </div>
                                      </div>
                                    </form>
                                </div>
                            </div>
                           </div>
                        </div>
                      </div>
                    </div>